<div class="container mx-auto p-4">
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @movies.each do |movie| %>
    <li class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105">
      <div class="p-6">
        <h2 class="text-2xl font-bold text-indigo-600 mb-2"><%= movie.title %></h2>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= movie.rating %></span>
        <p class="text-green-600 font-semibold text-lg mb-4"><%= total_gross(movie) %></p>
        <p class="text-gray-700 mb-4 line-clamp-3"><%= truncate(movie.description, length: 60, separator: ' ') %></p>
        <p class="text-sm text-gray-500">Release Year: <%= year_of(movie) %></p>
      </div>
    </li>
    <% end %>
  </ul>
</div>